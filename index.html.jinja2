<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="refresh" content="30">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>Lab Container Stack</title>
  </head>
  <body>
      
  <main role="main" class="container">
    <h1 class="my-3 p-3 pb-2 mb-0">Container Status</h1>
  
    <div class="my-3 p-3 bg-white rounded shadow-sm">
      <h6 class="border-bottom border-gray pb-2 mb-0">Services:</h6>
      {% for container in config if container['labels'].get('infra',none) is none %}
      <div class="media text-muted pt-3">
        {% if container['attrs']['State']['Status'] == 'running' %}
        <svg class="bd-placeholder-img mr-2 rounded" width="64" height="64" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 32x32"><title>{{ container['attrs']['State']['Status'] }}</title><rect fill="#18c60b" width="100%" height="100%"/></svg>
        {% else %}
        <svg class="bd-placeholder-img mr-2 rounded" width="64" height="64" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 32x32"><title>{{ container['attrs']['State']['Status'] }}</title><rect fill="#e81010" width="100%" height="100%"/></svg>
        {% endif %}      
        <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
          <div class="d-flex justify-content-between align-items-center w-100">
            <strong class="text-gray-dark">{{ container['attrs']['Name'] }}</strong>
            <a href="{{ container['labels']['traefik.frontend.rule'].split(':')[-1] }}/">Manage</a>
          </div>
          
          <div class="d-flex justify-content-between align-items-center w-100">
            <span class="d-block">ID: {{ container['attrs']['Id'] }}</span>
            {% if container['attrs']['State']['Status'] == 'running' %}
            <a href="api/operate/stop/{{ container['attrs']['Id'] }}?redir=home">Stop</a>
            {% else %}
            <a href="api/operate/start/{{ container['attrs']['Id'] }}?redir=home">Start</a>
            {% endif %}     
          </div>

          <div class="d-flex justify-content-between align-items-center w-100">
            <span class="d-block"></span>
            <a href="api/operate/logs/{{ container['attrs']['Id'] }}">Raw Logs</a>    
          </div>
          
        </div>
      </div>
      {% endfor %}
    </div>  

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>
